<div class='login'>
  <% if current_user %>
     <%= current_user.email %>
     <%= link_to "Log out", destroy_user_session_path, method: :delete %>
  <% else %>
     <%= link_to "Sign In", new_user_session_path %>
     <%= link_to "Register", new_user_registration_path %>
  <% end %>
</div>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>T-minus</th>
      <th>Title</th>
      <th>Date</th>
      <th>Time</th>
      <th>Category</th>
      <th>Icon</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @tasks.each do |task| %>

    <% if current_user.email == task.user.email %>

          <tr class="<%= time_till_task( (task.date - Date.today).to_s.chop.chop.to_i )%>">

            <td><%= (task.date - Date.today).to_s.chop.chop.to_i %></td>
            <td><%= task.title %></td>
            <td><%= task.date %></td>
            <td><%= task.time.strftime("%H:%M") %></td>
            <td><%= task.category %></td>
            <td><i class="<%= icon_category(task.category) %>" aria-hidden="true"></i></td>
            <td><%= task.user.email %></td>
            <td><%= link_to 'Show', task %></td>
            <td><%= link_to 'Edit', edit_task_path(task) %></td>
            <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td><%= link_to 'Add to iCal',iCal_path(task) , :format => :ics %></td>
          </tr>
        <% end %>
    <%end %>


  </tbody>
</table>

