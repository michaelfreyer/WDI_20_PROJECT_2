<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

    <ul>
    <% @task.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@task) do |f| %>

<div class="row">
    <div class="col-xs-2 col-md-4 col-lg-4 center-me rm-pad"></div>
        
      <div class="col-xs-8 col-md-4 col-lg-4 center-me">
        <div class="field">
          <br>
          <%= f.text_field :title, placeholder: ":Title", class: "style-5" %>
        </div>
      </div>

    <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>

</div>

<div class="row">
    <div class="col-xs-1 col-md-4 col-lg-4 center-me rm-pad"></div>
        
      <div class="col-xs-10 col-md-4 col-lg-4 center-me">
          <div class="field">
          <%= f.label :date %><br>
          <%= f.date_select :date %>
          </div>
      </div>

    <div class="col-xs-1 col-md-4 col-lg-4 center-me"></div>

</div>

<div class="row">
    <div class="col-xs-2 col-md-4 col-lg-4 center-me rm-pad"></div>
        
      <div class="col-xs-8 col-md-4 col-lg-4 center-me">
        <div class="field">
            <%= f.label :time %><br>
            <%= f.time_select :time %>
