          <div class="row center-me">
            <div class="col-xs-6">
              <a href="<%= tasks_path %>"><i class="fa fa-undo fa-2x" aria-hidden="true"></i></a>
            </div>
              
            <div class="col-xs-6 center-me">
              <div class="actions center-me">
                    <button id="btnTimer" type="submit" class="login center-me">
                    <i class="fa fa-check fa-2x" aria-hidden="true"></i>
                    </button>            
              </div>
            </div>

       
          <br />

          </div>
        </div>
