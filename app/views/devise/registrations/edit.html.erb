
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "style-5" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :mobile %><br />
    <%= f.text_field :mobile ,  class: "style-5"%>
  </div>

  <div class="field">
    <%= f.label :password %> <i>(leave blank for no change)</i><br />
    <%= f.password_field :password, autocomplete: "off",  class: "style-5" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",  class: "style-5" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(current pass to confirm)</i><br />
    <%= f.password_field :current_password, autocomplete: "off",  class: "style-5"%>
  </div>

<br>


<div class="row">
    <div class="col-xs-6 center-me">
      <%= f.submit "Update account" %>
    </div>

    <div class="col-xs-6 center-me">
      <%= link_to "Delete account", registration_path(resource_name), class: "button", data: { confirm: "Are you sure?" }, method: :delete %>
    </div>
        
    <% end %>

</div>

<br>

<div class="row">
    <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>
        
      <div class="col-xs-8 col-md-4 col-lg-4 center-me">

          <a href="<%=tasks_path%>"><i class="fa fa-undo fa-2x" aria-hidden="true"></i></a>

      </div>

    <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>

</div>

<br>



