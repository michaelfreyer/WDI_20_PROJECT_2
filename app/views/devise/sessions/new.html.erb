<div class="row">

    <div class="col-xs-2">.col-xs-2</div>
        
      <div class="col-xs-8">

        <div class="top-spacer">
          <a href="/"><h1 class="form-signin-heading">Log-In</h1></a>
          <p>col-xs-8</p>
        </div>

      </div>

    <div class="col-xs-2">.col-xs-2</div>

</div>


<br>

<div class="row">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


        <div class="row">
          <div class="col-xs-2">.col-xs-2</div>
              
            <div class="col-xs-8">
                 
                 <div class="form-group">
                       <div class="field">
                         <%= f.label :email %><br />
                         <%= f.email_field :email, autofocus: true %>
                       </div>
                 </div>

            </div>


          <div class="col-xs-2">.col-xs-2</div>

        </div>

    <br>

    <div class="row">
          <div class="col-xs-2">.col-xs-2</div>
              
            <div class="col-xs-8">
                 <div class="form-group">
                       <div class="field">
                         <%= f.label :password %><br />
                         <%= f.password_field :password, autocomplete: "off" %>
                       </div>
                 </div>
            </div>

          <div class="col-xs-2">.col-xs-2</div>
        </div>
<br>

    <div class="row">
          <div class="col-xs-2">.col-xs-2</div>
              
            <div class="col-xs-8">
                 <div class="form-group">
                         <div class="actions">
                           <%= f.submit "Log in" %>
                         </div>
                  </div>

                  <div class="form-group">
                         <% if devise_mapping.rememberable? -%>
                           <div class="field">
                             <%= f.check_box :remember_me %>
                             <%= f.label :remember_me %>
                           </div>

                         <% end -%>
                  </div>



            </div>
  

    <div class="col-xs-2">.col-xs-2</div>

    </div>
<% end %>


</div>

<br>

<div class="row">
<div class="col-xs-2">.col-xs-2</div>
    
  <div class="col-xs-8">

    <div class="bottom-spacer">

    </div>

  </div>

<div class="col-xs-2">.col-xs-2</div>

</div>



<br>

