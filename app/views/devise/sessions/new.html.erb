<div class="row center-me">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


        <div class="row">
          <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>
              
            <div class="col-xs-8 col-md-4 col-lg-4">
                 
                 <div class="form-group">
                       <div class="field">
                         <%= f.email_field :email, placeholder: ":E-mail" ,class: "style-5" %>
                       </div>
                 </div>

            </div>


          <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>

        </div>


    <div class="row">
          <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>
              
            <div class="col-xs-8 col-md-4 col-lg-4">
                 <div class="form-group">
                       <div class="field">
                         <%= f.password_field :password, placeholder: ":Password",  autocomplete: "off", class: "style-5" %>
                       </div>
                 </div>
            </div>

          <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>
        </div>

    <div class="row">
          <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>
              
            <div class="col-xs-8 col-md-4 col-lg-4">

              <div class="row center-me">
              <div class="col-xs-4">
                <i class="fa fa-undo" aria-hidden="true"></i>

              </div>
                  
                <div class="col-xs-4">

                <div class="form-group">

                            <div class="actions">
                            
                              <input type="submit" name="Log In">
                              <i class="fa fa-sign-in" aria-hidden="true"></i>
                              </input>
                            
                            </div>
                     </div>



                </div>

              <div class="col-xs-4"></div>
              <%= link_to "Forgot password?", new_password_path(resource_name) %><br />

              </div>
                 

                 



            </div>
  

        <div class="col-xs-2 col-md-4 col-lg-4 center-me"></div>

        </div>
<% end %>


</div>

