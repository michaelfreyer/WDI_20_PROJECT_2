<div class="row">

    <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>
        
      <div class="col-xs-8 col-md-4 col-lg-4">

        <div class="top-spacer-sign">
          <a href="/"><h1 class="form-signin-heading">Sign-In</h1></a>
          <p>col-xs-8</p>
        </div>

      </div>

    <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>

</div>


<br>

<div class="row center-me">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>


        <div class="row">
          <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>
              
            <div class="col-xs-8 col-md-4 col-lg-4">
                 
                 <div class="form-group">
                       <div class="field">
                         <%= f.email_field :email, placeholder: "Please enter your E-mail" ,class: "style-5" %>
                       </div>
                 </div>

            </div>


          <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>

        </div>

    <br>

    <div class="row">
          <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>
              
            <div class="col-xs-8 col-md-4 col-lg-4">
                 <div class="form-group">
                       <div class="field">
                         <%= f.password_field :password, placeholder: "Please enter your Password",  autocomplete: "off", class: "style-5" %>
                       </div>
                 </div>
            </div>

          <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>
        </div>
<br>

    <div class="row">
          <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>
              
            <div class="col-xs-8 col-md-4 col-lg-4">
                 <div class="form-group">
                         <div class="actions">
                           <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
                         </div>
                  </div>

                  <div class="form-group">
                         <% if devise_mapping.rememberable? -%>
                           <div class="field">
                             <%= f.check_box :remember_me %>
                             <%= f.label :remember_me %>
                           </div>

                         <% end -%>
                  </div>



            </div>
  

    <div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>

    </div>
<% end %>


</div>

<br>

<div class="row center-me">
<div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>
    
  <div class="col-xs-8 col-md-4 col-lg-4">

    <div class="bottom-spacer-sign">

    <%= render "devise/shared/links" %>


    </div>

  </div>

<div class="col-xs-2 col-md-4 col-lg-4 center-me">.col-xs-2</div>

</div>



<br>

